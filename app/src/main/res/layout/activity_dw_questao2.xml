<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DwQuestao2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Desenvolvimento Web"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Questão 2"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Quem ganhou as eleições no Brasil?"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rd_Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/dw_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a - Ciro" />

        <RadioButton
            android:id="@+id/dw_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b - Simone Tebet" />

        <RadioButton
            android:id="@+id/dw_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c - Bolsonaro" />

        <RadioButton
            android:id="@+id/dw_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="d - Lula" />

        <RadioButton
            android:id="@+id/dw_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e - Soraya" />
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/bt_resp"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:text="RESPONDER" />

        <Button
            android:id="@+id/bt_continuar"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:text="continuar" />
    </LinearLayout>

    <TextView

        android:id="@+id/tv_resp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Placar : "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/placar"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text=" "
            android:textSize="20sp"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>


</LinearLayout>

